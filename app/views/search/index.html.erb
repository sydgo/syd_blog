<div class="container">
  <div class="row justify-content-center text-center" style="margin-bottom: 100px;">
    <% if params[:query].present? %>
      <div class="mt-3 mb-4">
        <h2>Search results for "<%= params[:query] %>"</h2>
      </div>
    <% end %>

    <div class="container justify-content-center mb-5">
      <h2 class="font-weight-bold">Users</h2><br>
      <% if @users.blank? %>
        <p>No users found.</p>
      <% else %>
        <% @users.each do |user| %>
          <%= render 'users/user', user: user %>
        <% end %>
        <br>
      <% end %>
    </div>

    <div class="container justify-content-center">
      <h2 class="font-weight-bold">Articles</h2><br>
      <% if @articles.blank? %>
        <p>No articles found.</p>
      <% else %>
        <%= render 'articles/article' %>
        <br>
      <% end %>
    </div>
  </div>
</div>